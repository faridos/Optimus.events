{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Member list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datesent</th>
                <th>Dateconfirm</th>
                <th>Confirmed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('member_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.datesent %}{{ entity.datesent|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateconfirm %}{{ entity.dateconfirm|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.confirmed }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('member_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('member_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('member_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
