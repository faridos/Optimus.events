{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Club list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Path</th>
                <th>Datecreation</th>
                <th>Discpline</th>
                <th>Adresse</th>
                <th>Lat</th>
                <th>Lng</th>
                <th>Lienweb</th>
                <th>Active</th>
                <th>Fraisadhesion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('club_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.path }}</td>
                <td>{% if entity.dateCreation %}{{ entity.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.discpline }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.lat }}</td>
                <td>{{ entity.lng }}</td>
                <td>{{ entity.lienWeb }}</td>
                <td>{{ entity.active }}</td>
                <td>{{ entity.fraisAdhesion }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('club_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('club_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('club_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
