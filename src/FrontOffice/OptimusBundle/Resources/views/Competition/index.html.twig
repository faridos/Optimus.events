{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Competition list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Path</th>
                <th>Titre</th>
                <th>Lieu</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Nbrplaces</th>
                <th>Frais</th>
                <th>Description</th>
                <th>Lat</th>
                <th>Lng</th>
                <th>Nbrvu</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('competition_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.path }}</td>
                <td>{{ entity.titre }}</td>
                <td>{{ entity.lieu }}</td>
                <td>{% if entity.dateDebut %}{{ entity.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateFin %}{{ entity.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.nbrPlaces }}</td>
                <td>{{ entity.frais }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.lat }}</td>
                <td>{{ entity.lng }}</td>
                <td>{{ entity.nbrvu }}</td>
                <td>{{ entity.active }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('competition_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('competition_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('competition_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
