{% extends "FOSUserBundle::layout.html.twig" %}
{% block stylesheets %}
    <link href="http://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">
    <link href="{{ asset('template/css/form.css') }}" rel="stylesheet">
{% endblock %}
{% block nav %}
    <li><a href="{{ path("fos_user_registration_register") }}" class="btn btn-round btn-o btn-green" data-target="#signup">Inscription</a></li>
    {% endblock %}   
    {% block body %}
    <div id="home-map" style="height:680px"></div>
    <div class="home-caption">
        <div class="home-subtitle" style="">
            <div  class="col-md-4 col-md-offset-4">
                <form id="msform" style="bottom: 70px; text-align: center;" action="{{ path("fos_user_security_check") }}"  method="post" >
                    <fieldset>
                        {% if error %}
                            <div class="pam login_error_box uiBoxRed" role="alert" tabindex="0">
                                <div>{{ error.message|trans({}, 'FOSUserBundle') }}</div>      
                            </div>
                        {% endif %}
                        <h2 class="fs-title" style="font-weight: bold">CONNEXION OPTIMUS</h2>

                        <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.generateCsrfToken('authenticate')}}" />
                        <input type="text" class="form-control"  name="_username" id="username" value="" required="required" placeholder="Email OR Pseudo "/>
                        <input type="password" class="form-control"  name="_password" id="password" required="required" placeholder="Mot de passe" autocomplete="off" />
                        <input type="submit" name="submit" class="action-button" value="Confirmer">
                        <div class="checkbox custom-checkbox"><label><a href="{{ path('fos_user_resetting_request') }}" style="color:rgba(215, 118, 0, 1)"><strong>Mot de passe oublié ?</strong></a></label></div>
                    </fieldset>   
                </form>
            </div>
        </div>
    </div>
    <div class="search-panel">
        <form class="form-inline" role="form">
            <div class="form-group">
                <img src="{{ asset('template/images/marker-green.png') }}">"&gt;
            </div>
            <div class="form-group">
                <input style="border-radius:25px" type="text" class="form-control" id="pac-input2" placeholder="Entrer ici votre région" autocomplete="on" size="60">
            </div>
            <div class="form-group">
                <a id="btn-input" class="btn btn-round btn-green btn-m">Ma position actuelle</a></div>
        </form>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('template/js/animation.js') }}" type="text/javascript"></script> 
    <script src="{{ asset('template/js/home.js') }}" type="text/javascript"></script>

{% endblock %}